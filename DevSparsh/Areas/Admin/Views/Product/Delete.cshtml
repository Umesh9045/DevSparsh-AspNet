@model Product


<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-4 card p-3">
        <h2 class="text-center text-info">Delete Product</h2>
        <section>
            <form method="post" enctype="multipart/form-data">
                <hr />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input asp-for="Name" disabled type="text" class="form-control" aria-required="true" />
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label">Category</label>
                    <input asp-for="Category" disabled type="text" class="form-control" aria-required="true" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" disabled type="text" class="form-control" aria-required="true"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" type="number" disabled class="form-control" aria-required="true" />
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image</label><br />
                    <img src="@Url.Content("~/Images/products/" + Model.ImageUrl)" width="100" />
                </div>

                <div class="row">
                    <div class="col-8">
                        <a asp-controller="Product" asp-action="Index" class="text-decoration-none float-start mt-2">Back to product list</a>
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-danger float-end">Delete</button>
                    </div>
                </div>
                <div>
                </div>
            </form>
        </section>
    </div>
</div>
